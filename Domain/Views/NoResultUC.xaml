<UserControl x:Class="ADO.NET_Task9.Domain.Views.NoResultUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ADO.NET_Task9.Domain.Views"
             mc:Ignorable="d" 
             d:DesignHeight="400" 
             d:DesignWidth="1100"
             Height="400"
             Width="1100">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="6*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Image Source="\Domain\Images\noresult.png"></Image>
        </Grid>

        <Grid Grid.Row="2">
            <TextBlock Style="{StaticResource MyTextBlockStyle}"
                       HorizontalAlignment="Left"
                       Width="500"
                       Margin="20,0,0,0"
                       TextAlignment="Left"
                       Text="Sorry, nothing was found based on your search.">
            </TextBlock>
        </Grid>

        <Grid Grid.Row="4">
            <TextBlock Style="{StaticResource MyTextBlockStyle}"
                       HorizontalAlignment="Left"
                       Width="500"
                       Margin="20,0,0,0"
                       Foreground="Gray"
                       TextAlignment="Left"
                       Text="Please choose more suitable search filters.">
            </TextBlock>
        </Grid>
    </Grid>
</UserControl>
